
@{
    ViewData["Title"] = "index";
}

@model IEnumerable<Tema2_NoLogin.Models.User>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Users</h2>
        </div>
        <div class="col-6">
            <a asp-controller="User" asp-action="Create" class="btn btn-primary">Create new User</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thread>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Password
                    </th>
                    <th>
                        Username
                    </th>
                </tr>
            </thread>
            <tbody>
                @foreach(var user in Model)
                {
                <tr>
                    <td width="30%">@user.Id</td>
                    <td width="30%">@user.Name</td>
                    <td width="30%">@user.Password</td>
                    <td width="30%">@user.Username</td>
                    <td width="40%">
                        <div class="col-6 text-right">
                            <a asp-controller="User" asp-action="Update" asp-route-Id="@user.Id" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="User" asp-action="GetForDelete" asp-route-Id="@user.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Users</p>
    }



</div>

<h1>index</h1>

